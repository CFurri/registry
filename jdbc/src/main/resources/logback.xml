<configuration>
    <!-- Appender de consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log per defecte (INFO cap amunt) -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Si vols debug nomÃ©s per la teva app -->
    <logger name="cat.uvic.teknos" level="debug" />
</configuration>